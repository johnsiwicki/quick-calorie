<h2>
  <%= link_to post.title, post %>
</h2>

<p>
<% if post.kind == 'image' %>

<%= image_tag post.content, style: "width:100%" %>

<% else %>

  <%= simple_format post.content %>
  <% end %>
  
</p>

<p class="text-muted">
    <small></small> Posted On: <%= post.created_at.to_formatted_s(:long)  %></small>
</p>
